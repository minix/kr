<span id="comments_count"><%= pluralize(@comments.count, "Comment") %></span>
<div id="comments">
	<%= render :partial => comment, :locals => { :list => true } %>
</div>

<hr />

<div id="comment-notice"></div>

<h2>Say something!</h2>
<% form_for Comment.new, :remote => true do |f| %>
	<%= f.label :username, "Your name" %><br />
	<%= f.text_field :username %><br />
	<%= f.label :comment_content, "Comment" %><br />
	<%= f.text_area :comment_content, :rows => 8 %><br />
	<%= f.submit "Add comment" %>
<% end %>
