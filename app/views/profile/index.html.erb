		<h1>邀请好友</h1>
	</div> 
	<div id="feature8" style="display:none;" class="featureWrapper">
		<h1>搜索好友</h1>
		<% @username.each do |username| %>
			<%= username.name %>
		<% end %>
	</div> 
</div> 
<script type="text/javascript"> 
	$(".feature").idTabs(function(id,list,set){ 
			$("a",set).removeClass("selected") 
			.filter("[href='"+id+"']",set).addClass("selected"); 
			for(i in list) 
			$(list[i]).hide(); 
			$(id).fadeIn(); 
			return false; 
			}); 
</script>
